      xmlns:c="http://java.sun.com/jsp/jstl/core"
      xmlns:portal="http://tags.java.no/portal"
      xmlns:parts="urn:jsptagdir:/WEB-INF/tags"
      xmlns:jsp="http://java.sun.com/JSP/Page">
<jsp:directive.page pageEncoding="utf-8" contentType="text/html;charset=utf-8"/>
<jsp:useBean id="frontJspBean" type="no.java.portal.page.FrontJspBean" scope="application"/>
<head>
  <title>javaBin - Registrer bruker</title>
  <style type="text/css">
    label {
      margin-right: 1em;
    }

    td#save {
      text-align: right;
    }
  </style>
  <script src="${pageContext.request.contextPath}/js/brukerkonto.js" type="text/javascript"><!-- space --></script>
</head>
<body>
<div id="frontPage_news">
